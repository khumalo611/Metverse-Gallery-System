<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="artworkLanding" prefHeight="542.0" prefWidth="696.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.design_3.HelloController">
   <children>
      <Pane layoutX="152.0" layoutY="171.0">
         <children>
            <HBox layoutY="240.0" prefHeight="25.0" prefWidth="390.0" spacing="20.0">
               <children>
                  <Button fx:id="addArtBt" mnemonicParsing="false" onAction="#onAddArtClickBt" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: #00968a;" text="Add" textFill="#fafafa" />
                  <Button fx:id="removeArtBt" disable="true" mnemonicParsing="false" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: #00968a;" text="Remove" textFill="#fafafa" />
                  <Button fx:id="updateArtBt" disable="true" mnemonicParsing="false" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: #00968a;" text="Update" textFill="#fafafa" />
                  <Button fx:id="viewArtBt" disable="true" mnemonicParsing="false" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: #00968a;" text="View" textFill="#fafafa" />
               </children>
            </HBox>
            <TableView fx:id="artSearchTable" layoutY="35.0" onMouseClicked="#enableButtons" prefHeight="141.0" prefWidth="390.0">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox spacing="8.0">
               <children>
                  <TextField fx:id="artSearchTf" onAction="#onSearchArt" prefHeight="25.0" prefWidth="280.0" promptText="Enter artwork name" stylesheets="@../ButtonStyles.CSS" />
                  <Button fx:id="artSearchBt" mnemonicParsing="false" onAction="#onSearchArt" prefHeight="25.0" prefWidth="103.0" style="-fx-background-color: #00968a; -fx-border-radius: 0;" text="Search" textFill="#fafafa" />
               </children>
            </HBox>
         </children>
      </Pane>
      <Pane prefHeight="80.0" prefWidth="696.0" style="-fx-background-color: #00968a;">
         <children>
            <Label layoutX="322.0" layoutY="30.0" text="Artwork" textFill="#fafafa">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </children>
</Pane>
